@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - MyPass</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f5f7fa;
        }

        .auth-card {
            max-width: 420px;
            margin: 5rem auto;
            padding: 2rem;
            border-radius: 12px;
            background: #fff;
            box-shadow: 0 8px 18px rgba(0,0,0,0.08);
        }

        .auth-title {
            font-weight: 600;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .small-text {
            text-align: center;
            margin-top: 1rem;
        }

        a {
            text-decoration: none;
        }
    </style>
</head>

<body>
    <div class="auth-card">
        @RenderBody()
    </div>
</body>
</html>
