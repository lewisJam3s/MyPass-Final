@model MyPass.Models.ViewModels.Vault.SecureNoteViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create Secure Note";
    Layout = "_Layout";   
}
<h2>Add Secure Note</h2>

<form asp-action="CreateSecureNote" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="NoteTitle"></label>
        <input asp-for="NoteTitle" class="form-control" />
        <span asp-validation-for="NoteTitle" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NoteContent"></label>
        <textarea asp-for="NoteContent" class="form-control" rows="5"></textarea>
        <span asp-validation-for="NoteContent" class="text-danger"></span>
    </div>

    <button class="btn btn-success">Save</button>
</form>
